local Chloex = loadstring(game:HttpGet("https://raw.githubusercontent.com/TesterX14/XXXX/refs/heads/main/Library"))()

local Window = Chloex:Window({
    Title   = "Chloe X |",
    Footer  = "Example",
    Image   = "132435516080103",
    Color   = Color3.fromRGB(0,208,255),
    Theme   = 9542022979,
    Version = 2,
})

if Window then
    chloex("Window loaded!")
end

-- Tab
local ExampleTab = Window:AddTab({
    Name = "Example",
    Icon = "player"
})

-- Section
local Example = ExampleTab:AddSection("Section Example", true)

-- Paragraph
local MyParagraph = Example:AddParagraph({
    Title = "Hellooooooo from Chloeeeeee:3",
    Content = "You can refresh this with button/toggles",
    Icon = "rbxassetid://84173963561612"
})

Example:AddParagraph({
    Title = "CHLOEEE X",
    Content = "You can refresh this with button/toggles",
    Icon = "player",
    ButtonText = "COPY LINK DISCORD",
    ButtonCallback = function()
        if setclipboard then
            setclipboard("https://discord.gg/J5KdfSHD")
            print("Link Discord dicopy ke clipboard!")
        else
            print("Executor kamu ga support setclipboard")
        end
    end
})

-- Button untuk refresh paragraph
Example:AddButton({
    Title = "Refresh Button Paragraph",
    Content = "Click this for update",
    Callback = function()
        MyParagraph:SetContent("Chloeee Uwuuuuuuu")
    end
})

-- Button untuk notifikasi
Example:AddButton({
    Title = "Notification Test",
    Callback = function()
        chloex("Hello from chloeeeeeee :3")
    end
})

Example:AddDivider()

-- Tambahan Toggle
Example:AddToggle({
    Title = "God Mode",
    Default = false,
    Callback = function(state)
        if state then
            chloex("God Mode ON")
        else
            chloex("God Mode OFF")
        end
    end
})

-- Tambahan Dropdown
Example:AddDropdown({
    Title = "Select Fruit",
    Content = "Pick one you like",
    Options = {"Apple","Banana","Orange"},
    Default = "Apple",
    Callback = function(value)
        chloex("You selected: " .. value)
    end
})

Example:AddSlider({
    Title = "Volume",
    Content = "Atur besar suara",
    Min = 0,
    Max = 100,
    Default = 50,
    Increment = 5,
    Callback = function(value)
        print("Volume diset ke:", value)
    end
})
